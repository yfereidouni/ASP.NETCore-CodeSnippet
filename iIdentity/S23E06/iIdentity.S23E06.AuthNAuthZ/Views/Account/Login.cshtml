@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="">
    <h1 class="display-6">Login</h1>
    <p>Login Information:</p>
</div>

<div class="col-6">

    <div class="card">

        <div class="card-header">
            <h2>Local Account</h2>
        </div>

        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" method="post">
                @*<input type="hidden" data-val="true" data-val-required="The ReturnUrl field is required."/>*@

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" asp-area="" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="">
                        <input type="checkbox" asp-for="RememberMe" /> Remember Me!
                    </label>
                </div>

                <input type="hidden" asp-for="RedirectUrl" />
                <input class="btn btn-primary btn-lg" type="submit" value="Login" />
            </form>
        </div>

    </div>
</div>

